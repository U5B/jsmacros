{
    "compilerOptions": {
        "module": "CommonJS",
        "removeComments": false,
        "target": "ES2020",
        "lib": ["ES2020"],
        "outDir": "./build",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
      "scripts/**/*.ts",
      "headers/*.d.ts"
    ],
    "exclude": [
        "build/*",
        ".git/*",
        "README.md",
        ".gitignore"
    ]
}